<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:League_of_Legends_Counterpicks"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:data="using:League_of_Legends_Counterpicks.Data"
      xmlns:UI="using:Microsoft.Advertising.Mobile.UI"
      x:Class="League_of_Legends_Counterpicks.HubPage"
      DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
      d:DataContext="{Binding Source={d:DesignData Source=/DataModel/SampleData.json, Type=data:SampleDataSource}}"
      mc:Ignorable="d">


    <Grid x:Name="LayoutRoot"
          Background="{ThemeResource HubBackgroundImageBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="8*" />
            <RowDefinition Height="0.7*" />
        </Grid.RowDefinitions>
        <Grid Margin="5,0,10,0">
            <StackPanel Margin="0,0,0,0">
                <Image Source="/Assets/League-of-Legends-Game-Logo.png"
                       HorizontalAlignment="Center"
                       MaxHeight="90" />
                <TextBlock FontSize="32"
                           Foreground="#FFE0E042"
                           Text="Counters"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Grid>

        <!--Enter inside the dictionary's only key, groups, and then into the list holding them -->
        <Grid Grid.Row="1"
              Margin="5,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="7*" />
            </Grid.RowDefinitions>
            <StackPanel>
                <TextBox x:ConnectionId='2' x:Name="TextBox"
                                                          
                                                      
                                                     />
            </StackPanel>
            <Grid Grid.Row="7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2.5*" />
                </Grid.ColumnDefinitions>
                <ListView x:ConnectionId='1' ItemsSource="{Binding Groups}"
                          Grid.Row="1"
                          IsItemClickEnabled="True"
                                                            
                          ContinuumNavigationTransitionInfo.ExitElementContainer="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="{Binding Title}"
                                           Style="{ThemeResource ListViewItemTextBlockStyle}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
        <StackPanel Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Right">
                    
            <TextBlock Text="By a Diamond 1"
                       FontSize="15"
                       Foreground="#FFCCDDF7" />
            <TextBlock Text="Add me: Raklor"
                       FontSize="15"
                       Foreground="#FFCCDDF7" />
        </StackPanel>
        <Grid Grid.Row="3">
            <UI:AdControl AutoRefreshIntervalInSeconds="60"
                          ApplicationId="07d7f5f2-df87-49c2-be78-e32607b747a4"
                          AdUnitId="185801"
                          HorizontalAlignment="Center"
                          Height="50"
                          IsAutoRefreshEnabled="True"
                          VerticalAlignment="Center"
                          Width="320" />
        </Grid>
    </Grid>
</Page>

