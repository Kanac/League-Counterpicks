<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:League_of_Legends_Counterpicks"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:data="using:League_of_Legends_Counterpicks.Data"
      xmlns:UI="using:Microsoft.Advertising.Mobile.UI"
      x:Class="League_of_Legends_Counterpicks.MainPage"
      DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
      d:DataContext="{Binding Source={d:DesignData Source=/DataModel/Data.json, Type=data:DataSource}}"
      mc:Ignorable="d">


    <Grid x:Name="LayoutRoot"
          Background="{ThemeResource HubBackgroundImageBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2.2*" />
            <RowDefinition Height="7*" />
            <RowDefinition Height="0.7*" />
        </Grid.RowDefinitions>
        <Grid>
            <StackPanel> 
                <Image Source="/Assets/League-of-Legends-Game-Logo.png"
                       MaxHeight="90" 
                       HorizontalAlignment="Center"></Image>
                <TextBlock FontFamily="Chiller"
                           FontSize="45"
                           Foreground="#FFE0E042"
                           Text="Counters"
                           HorizontalAlignment="Center"></TextBlock>
            </StackPanel>
        </Grid>

        <!--Enter inside the dictionary's only key, groups, and then into the list holding them -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.2*" />
                <RowDefinition Height="9*" />
            </Grid.RowDefinitions>
            <StackPanel>
                <TextBox x:ConnectionId='3' x:Name="FilterTextBox"
                                                            
                                                           />
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2.5*" />
                </Grid.ColumnDefinitions>
                <ListView x:ConnectionId='2' ItemsSource="{Binding Roles}"
                          Grid.Row="1"
                          IsItemClickEnabled="True"
                                                            
                          ContinuumNavigationTransitionInfo.ExitElementContainer="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="{Binding UniqueId}"
                                           Style="{ThemeResource ListViewItemTextBlockStyle}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
        <StackPanel Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Right">
                    
            <TextBlock Text="By a Diamond 1"
                       FontSize="15"
                       Foreground="#FFCCDDF7" />
            <TextBlock Text="Raklor"
                       FontSize="15"
                       Foreground="#FFCCDDF7" />
        </StackPanel>
        <Grid Grid.Row="3">
            <UI:AdControl x:ConnectionId='1' AutoRefreshIntervalInSeconds="60"
                          ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          AdUnitId="185804"
                          HorizontalAlignment="Center"
                          IsAutoRefreshEnabled="True"
                          VerticalAlignment="Center" 
                          Width="480"
                          Height="80"
                                                    />
        </Grid>
    </Grid>
</Page>

